#! /usr/bin/env node

var scrape = require('../lib/scraper')

var nodejs = require('../lib/scraper-nodejs')
var nodejsPre = require('../lib/scraper-nodejs-pre')

var nodesToScrape = []
var options = {
  dryRun: false,
  overwrite: false,
  definitionPaths: (
    process.env.NODE_BUILD_DEFINITIONS || 'share/node-build'
  ).split(':')
}

process.argv.forEach(function(arg) {
  switch (arg) {
    case '-f':
    case '--force':
      options.overwrite = true
      break
    case '-n':
    case '--dry-run':
      options.dryRun = true
      break
    case '--nodejs':
      nodesToScrape.push(nodejs)
      break
    case '--nodejs-pre':
      nodesToScrape.push(nodejsPre)
      break
  }
})

if (!nodesToScrape.length) {
  nodesToScrape = [nodejs]
}

nodesToScrape.forEach(function(node) {
  scrape(node, options)
})
